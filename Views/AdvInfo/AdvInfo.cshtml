<section class="header_text sub">
    <h4><span>Лот №@ViewBag.AdvId</span></h4>
</section>
@foreach (var item in ViewBag.Adv)
{
    if (item.Id == ViewBag.AdvId)
    {
        <section class="main-content">
            <div class="row">
                <div class="span9">
                    <div class="row">

                        <div class="span4">
                            <p class="thumbnail" data-fancybox-group="group1"><img alt="" src="@item.Photo"></p>

                        </div>
                        <div class="span5">
                            <address style="font-size:16px; margin-bottom: 7px;">
                                <strong>Имя:</strong> <span>@item.Name</span><br>
                                <strong>Порода:</strong> <span>@item.Breed</span><br>
                                <strong>Пол:</strong> <span>@item.Gender</span><br>
                                <strong>Рост:</strong> <span>@item.Height</span><br>
                                <strong>Возраст:</strong> <span>@item.Age</span><br>


                            </address>
                            <h4><strong>Цена: @item.Price &#8381;</strong></h4>
                        </div>
                        <div class="span6" style="font-size: 14px;">

                            <strong style="margin-bottom:15px">Владелец:</strong> <span style="margin-bottom:15px">@item.Owner.Username</span><br>

                            @if (!User.Identity.IsAuthenticated)
                            {
                                <button style="margin-bottom:15px" class="btn btn-inverse" type="button" onclick="noReg()">Связь с владельцем</button>

                            }
                            else
                            {
                                <button style="margin-bottom:15px" class="btn btn-inverse" type="button" onclick="showOwnData()">Связь с владельцем</button>
                                <br />
                                <strong class="invisibleNumbers" style="visibility:hidden; margin-bottom:15px">Номер телефона:</strong> 
                                <span class="invisibleNumbers" style="visibility: hidden; margin-bottom:15px">@item.Owner.PhoneNumber</span>
                                <br />
                                <a href="https://wa.me/@item.Owner.PhoneNumber" class="invisibleNumbers" style=" visibility:hidden; margin-bottom:15px">
                                    <img style="height: 40px;" src="~/themes/images/whatsapp.png" />
                                </a>
                            }

                        </div>


                    </div>
                    <div class="row">
                        <div class="span9">
                            <ul class="nav nav-tabs" id="myTab">
                                <li class="active"><a>Описание</a></li>

                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="home">@item.Description</div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </section>
    }
}
<script>
    function noReg() {
        alert('Чтобы связаться с владельцем необходимо войти!');
    }

    function showOwnData() {
        [].forEach.call(document.querySelectorAll('.invisibleNumbers'), function (el) {
            el.style.visibility = 'visible';
        });

    }
</script>
