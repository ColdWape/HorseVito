<body>
    <div id="top-bar" class="container">
        <div class="row">
            <div class="span4" style="display:flex;">
                @if (User.Identity.IsAuthenticated)
                {
                    foreach (var item in ViewBag.People)
                    {
                        if (item.Username == User.Identity.Name)
                        {

                            <img src="@item.Avatar" style="border-radius:200px; height:30px;" />
                            <div style="margin-top: auto; margin-bottom: auto; margin-left: 15px;">@item.Username</div>
                            

                        }
                    }


                }
            </div>
                <div class="span8">
                    <div class="account pull-right">
                        <ul class="user-menu">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a asp-action="Adv" asp-controller="CreateAdvertisment">Добавить объявление</a></li>
                                <li><a asp-action="Logout" asp-controller="Login">Выход</a></li>

                            }
                            else
                            {
                                <li><a asp-action="Login" asp-controller="Login">Вход</a></li>
                                <li><a asp-action="Reg" asp-controller="Login">Регистрация</a></li>

                            }

                        </ul>
                    </div>
                </div>
            </div>
    </div>
    <div id="wrapper" class="container">
        <section class="navbar main-menu">
            <div class="navbar-inner main-menu">
                <a asp-controller="Home" asp-action="Index" class="logo pull-left"><img src="~/themes/images/logo.png" class="site_logo" alt=""></a>
                
            </div>
        </section>
        <div>
